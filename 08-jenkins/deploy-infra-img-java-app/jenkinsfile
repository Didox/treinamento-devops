pipeline {
    agent any

    stages {
        stage('Clone repo') {
            steps {
                git url: 'https://github.com/Didox/treinamento-devops', branch: 'main'
            }
        }
        stage('Build EC2') {
            steps {
                sh "./var/lib/jenkins/workspace/InfraPipeline/08-jenkins/deploy-infra-img-java-app/deploy.sh"
            }
        }
        stage('Test Nginx') {
            steps {
                sh "./var/lib/jenkins/workspace/InfraPipeline/08-jenkins/deploy-infra-img-java-app/test.sh"
            }
        }
        stage('Build AMI') {
            steps {
                sh "ls -la"
            }
        }
    }
}
